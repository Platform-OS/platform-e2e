{
  "name": "platform-e2e",
  "version": "1.0.0",
  "description": "Tests for platformOS",
  "scripts": {
    "deploy": "marketplace-kit deploy -f",
    "test": "docker run -v $PWD:/MP -e \"MP_URL=$MP_URL\" -e \"GOOGLE_EMAIL=$GOOGLE_EMAIL\" -e \"GOOGLE_PASSWORD=$GOOGLE_PASSWORD\" -it platformos/testcafe 'testcafe \"chromium:headless --no-sandbox\" /MP/tests/e2e/features \"/MP/modules/**/test/*.js\"'",
    "test-ci": "testcafe 'chromium:headless --no-sandbox' --screenshots-on-fails --screenshots=screenshots tests/e2e/features/ \"modules/**/test/*.js\"",
    "test-local": "npx testcafe \"chrome:headless\" tests/e2e \"modules/**/test/*.js\"",
    "test-ui": "npx testcafe \"chrome\" tests/e2e \"modules/**/test/*.js\""
  },
  "repository": "https://github.com/mdyd-dev/platform-e2e.git",
  "license": "ISC",
  "devDependencies": {
    "@platform-os/testcafe-helpers": "^2.1.1",
    "faker": "^4.1.0",
    "shelljs": "^0.8.3"
  }
}
